<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="3dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsbold"
                    android:layout_margin="8dp"
                    android:text="Tomatos"
                    android:textColor="#5E5E5E"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="68dp"
                    android:layout_toStartOf="@+id/tomatos"
                    android:layout_toEndOf="@+id/type"
                    android:fontFamily="@font/poppinsregular"
                    android:text="60 Day until Recolt"
                    android:textColor="#5E5E5E"
                    android:textSize="14dp"
                    app:layout_constraintHorizontal_bias="0.0" />

                <ImageView
                    android:id="@+id/tomatos"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/tomato" />

                <ImageView

                    android:layout_width="220dp"
                    android:layout_height="9dp"
                    android:layout_below="@+id/type"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="-2dp"
                    android:background="@drawable/progress">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toStartOf="@+id/tomatos"
                    android:layout_toEndOf="@+id/land"
                    android:fontFamily="@font/poppinsregular"
                    android:text="1 Hectars"
                    android:textColor="#5E5E5E"
                    android:textSize="14dp"
                    app:layout_constraintHorizontal_bias="0.0" />

                <TextView
                    android:id="@+id/land"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="11dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/poppinssemibold"
                    android:text="Land Superficie"
                    android:textColor="#5E5E5E"
                    android:textSize="14dp"

                    app:layout_constraintHorizontal_bias="0.0" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="3dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

                <TextView
                    android:id="@+id/type2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsbold"
                    android:layout_margin="8dp"
                    android:text="Potatos"
                    android:textColor="#5E5E5E"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="68dp"
                    android:layout_toStartOf="@+id/potatos"
                    android:layout_toEndOf="@+id/type2"
                    android:fontFamily="@font/poppinsregular"
                    android:text="15 Day until Recolt"
                    android:textColor="#5E5E5E"
                    android:textSize="14dp"

                    app:layout_constraintHorizontal_bias="0.0" />

                <ImageView
                    android:id="@+id/potatos"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/potato" />

                <ImageView

                    android:layout_width="220dp"
                    android:layout_height="9dp"
                    android:layout_below="@+id/type2"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="-2dp"
                    android:background="@drawable/progress_pot">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toStartOf="@+id/potatos"
                    android:layout_toEndOf="@+id/land2"
                    android:fontFamily="@font/poppinsregular"
                    android:text="1.5 Hectars"
                    android:textColor="#5E5E5E"
                    android:textSize="14dp"

                    app:layout_constraintHorizontal_bias="0.0" />

                <TextView
                    android:id="@+id/land2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="11dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/poppinssemibold"
                    android:text="Land Superficie"
                    android:textColor="#5E5E5E"
                    android:textSize="14dp"

                    app:layout_constraintHorizontal_bias="0.0" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>