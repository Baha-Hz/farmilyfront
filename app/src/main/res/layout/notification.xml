<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".notification">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/notif_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/notifications"
                android:textColor="#363636"
                android:fontFamily="@font/poppinssemibold"
                android:textSize="30dp"
                android:paddingStart="20dp"
            >
            </TextView>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/notification"
                android:layout_marginStart="-70dp"
                app:layout_constraintStart_toEndOf="@id/notif_text">

            </ImageView>
        </LinearLayout>
       <ListView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_marginBottom="50dp">

       </ListView>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/home_notif"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="31dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="0.25"
            android:background="@drawable/home"
            android:backgroundTint="#636363"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_container">

        </Button>

        <Button
            android:id="@+id/message_notif"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/message"
            android:backgroundTint="#636363"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_container">

        </Button>

        <Button
            android:id="@+id/notif_notif"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"

            android:background="@drawable/notification"
            android:backgroundTint="#619151"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_container">

        </Button>

        <Button
            android:id="@+id/profil_notif"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="20dp"
            android:elevation="4dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/user"
            android:backgroundTint="#636363"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_container">

        </Button>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>